{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": [
        "http://127.0.0.1:8080/"
      ]
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.9
          }
        ],
        "largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 2500
          }
        ],
        "total-blocking-time": [
          "error",
          {
            "maxNumericValue": 200
          }
        ],
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
